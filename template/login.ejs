<% layout('layout/page') %>
<% block('title', 'Авторизация'); %>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 input-group input-group-md ">
        <form action="/login" method="post" style="margin: auto">
            <div class="form-group">
                <p for="username" class="text-center">Логин</p>
                <input id="loginIn" maxlength="25" size="40" name="username" class="form-control text-center"
                       placeholder="Username" aria-describedby="sizing-addon1">
            </div>

            <div class="form-group">
                <p class="text-center">Пароль</p>
                <input type="password" maxlength="25" size="40" name="password" class="form-control text-center"
                       placeholder="Password" aria-describedby="sizing-addon1">
            </div>

            <div style="text-align: right">
                <div class="btn-group-right" style="margin-top: 10px">
                    <button type="submit" class="btn btn-primary">Войти</button>
                    <button onclick="location.href = '/registration'" type="button" class="btn btn-primary">
                        Регистрация
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
