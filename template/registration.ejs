<% layout('layout/page') %>
<% block('title', 'Регистрация'); %>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 input-group input-group-md">
        <form action="/registration" method="post" style="margin: auto">
            <div class="form-group">
                <p class="text-center">Введите E-mail</p>
                <input maxlength="25" size="40" name="email" class="form-control text-center" placeholder="e-mail"
                       aria-describedby="sizing-addon1">
            </div>

            <div class="form-group">
                <p class="text-center">Введите имя пользователя</p>
                <input id="loginIn" maxlength="25" size="40" name="username" class="form-control text-center"
                       placeholder="Username" aria-describedby="sizing-addon1">
            </div>

            <div class="form-group">
                <p class="text-center">Придумайте пароль</p>
                <input id="password" maxlength="25" size="40" name="password" class="form-control text-center"
                       placeholder="Password" aria-describedby="sizing-addon1">
            </div>

            <div class="form-group">
                <p class="text-center">Подтвердите пароль</p>
                <input maxlength="25" size="40" name="passwordCheck" class="form-control text-center" placeholder=""
                       aria-describedby="sizing-addon1">
            </div>

            <div style="text-align: right">
                <button type="submit" class="btn btn-primary" style="margin-top: 10px">Зарегистрироваться
                </button>
            </div>
        </form>
    </div>
</div>


<script src="../authorization/registration.js"></script>